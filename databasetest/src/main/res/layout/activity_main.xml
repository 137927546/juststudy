<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/create_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create database"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/add_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add data"
        app:layout_constraintLeft_toLeftOf="@id/create_database"
        app:layout_constraintTop_toBottomOf="@id/create_database" />

    <Button
        android:id="@+id/update_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update data"
        app:layout_constraintTop_toBottomOf="@id/add_data"
        app:layout_constraintLeft_toLeftOf="@id/add_data"
        />
    <Button
        android:id="@+id/delete_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete data"
        app:layout_constraintTop_toBottomOf="@id/update_data"
        app:layout_constraintLeft_toLeftOf="@id/update_data"
        />
    <Button
        android:id="@+id/query_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query data"
        app:layout_constraintTop_toBottomOf="@id/delete_data"
        app:layout_constraintLeft_toLeftOf="@id/delete_data"
        />
</androidx.constraintlayout.widget.ConstraintLayout>